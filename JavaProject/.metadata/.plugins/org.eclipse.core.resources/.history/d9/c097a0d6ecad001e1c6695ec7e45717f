package day0108;

public class ForGugu_14 {

	public static void main(String[] args) {
		// 중첨 for문 이용한 구구단(2~9단)
		
		/*for(int dan = 2; dan <= 9; dan++) {
			
			for(int j = 1; j <= 9; j++) {
				System.out.println(dan + "X" + j + "=" + dan*j);
			}
			
			System.out.println();
		}*/
			
		
		
		//break문을 이용한 구구단
		
		for(int dan = 2; dan <= 9; dan++) {
			
			for(int j = 1; j <=9; j++) {
				
				if(j == 5)
					break; //현재의 반복문을 빠져나가 상위의 dan++로 이동
				System.out.println(dan + "*" + j + "=" + dan * j);
			}
			System.out.println();
		}
		
		
		
	}

}
