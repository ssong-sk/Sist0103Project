package day0112;

class Shop {

	
	private String reName;
	private int won;
	private String color;
	
	static int no;

	public Shop(String re, int wo, String co) {
		this.reName = re;
		this.won = wo;
		this.color = co;

	}

	public static void getShop() {
		System.out.println("[");
		System.out.println("번호\t상품명\t가격\t색상");
		System.out.println("===========================");
		System.out.println(reName + "\t" + won + "\t" + color);
	}
	
	//출력
	public void showSangPums() {
		no++;
	}

}

//
public class ArrReview_02 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Shop[] sh = new Shop[4];
		
		sh[0] = new Shop("요가매트", 25000, "핑크");
		sh[0] = new Shop("요가매트", 25000, "핑크");
	}

	

}
