package day0108;

public class For_07 {

	public static void main(String[] args) {
		// while문과 for문 비교
		
		int i = 10;
	
		while(i >= 0) {
			System.out.print(i-- + " ");
		}
		
		System.out.println("\n**for문으로 10~0 출력**");
		
		
		for (int a = 10 ; a >= 0 ; a--) {
			System.out.print(a + " ");
		}

		System.out.println(" ** for문 1~10 종료");
		
		
		for (int b = 1 ; b <= 10; b++) {
			System.out.println(b + "  ");
			System.out.println("종료");
		}
		
		
		System.out.println(" ** while문 1~10 종료");
		
		int c = 1;
		
		while(c <= 10) {
			System.out.print(c++ + " ");
		}
	}

}
