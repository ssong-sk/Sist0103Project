package day0108;

public class SumTest_11 {

	public static void main(String[] args) {
		// 반복문안에서 합계구하기
		
		
		int sum = 0; //sum 값은 무조건 0으로 값 설정해주기(합계를 구한것이기 떄문)
		
		for(int i = 1; i <= 10; i++) {
			
			//sum = sum + i; //잘 사용하지 않음
			sum += i;
		}

		System.out.println("1~10까지의 합은 : " + sum + "입니다.");
	}

}
